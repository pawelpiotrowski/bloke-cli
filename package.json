{
	"name": "blokecms-cli",
	"version": "0.0.3",
	"description": "CLI tool for Bloke CMS",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build:local": "npm run build && npm install . -g",
		"build": "tsc -p tsconfig.build.json",
		"dev": "tsc --watch",
		"lint": "xo",
		"test": "prettier --check . && xo && ava",
		"test:cov": "c8 ava",
		"version": "node ./scripts/version.js"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ink": "^4.1.0",
		"ink-spinner": "^5.0.0",
		"ink-text-input": "^5.0.1",
		"pastel": "^2.0.0",
		"react": "^18.2.0",
		"tar": "^6.1.15",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.32",
		"@types/tar": "^6.1.5",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"c8": "^8.0.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.54.2"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pawelpiotrowski/blokecms-cli.git"
	},
	"keywords": [
		"cli",
		"cms",
		"nestjs",
		"angular"
	],
	"author": "Pawel Piotrowski (https://github.com/pawelpiotrowski)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/pawelpiotrowski/blokecms/issues"
	},
	"homepage": "https://github.com/pawelpiotrowski/blokecms#readme"
}
